// JAVASCRIPT

function getRandomInt(max) {
  return Math.floor(Math.random() * Math.floor(max));
}
console.log(getRandomInt(5))

// helper functions

function name_to_number(name){
    if (name == 'rock') { 
        return 0 }  
    else if (name == 'Spock'){ 
        return 1} 
    else if (name == 'paper'){ 
        return 2}
    else if (name == 'lizard'){ 
        return 3}
    else if (name == 'scissors'){ 
        return 4}
		}
 


function number_to_name(number){
    if (number == 0) {
        return 'rock'}
    else if (number == 1){ 
        return 'Spock'}
    else if (number == 2) { 
        return 'paper'}
    else if (number == 3){ 
        return 'lizard'}
    else if (number == 4){ 
        return 'scissors'} 
		}
    

function rpsls(player_choice){
    console.log("----------------------------------------------------------")
    console.log("Player's Choice: ", player_choice) 
    // convert the player's choice to player_number using the function name_to_number()
    player_number = name_to_number(player_choice) 
    // compute random guess for comp_number using random.randrange()
    comp_number = getRandomInt(5)
    // print(comp_number)
    // convert comp_number to comp_choice using the function number_to_name()
    comp_choice = number_to_name(comp_number) 
    
    // print out the message for computer's choice
    console.log("Computer's choice: ", comp_choice)
    // compute difference of comp_number and player_number modulo five
    difference = Math.abs((comp_number - player_number)%5) // wrong. JS uses different mod math formula
    console.log(difference)
    // use if/elif/else to determine winner, print winner message
    if (difference == 0){ 
        console.log('Its a draw. Play again')}
    else if (difference == 1){
        console.log('Computer wins')} 
    else if (difference == 2){ 
        console.log('Computer wins')}
    else if (difference == 3){
        console.log('Player wins')}    
    else if (difference == 4){ 
        console.log('Player wins')}     
		}
    
// test your code - THESE CALLS MUST BE PRESENT IN YOUR SUBMITTED CODE
rpsls("rock")
rpsls("Spock")
rpsls("paper")
rpsls("lizard")
rpsls("scissors")

